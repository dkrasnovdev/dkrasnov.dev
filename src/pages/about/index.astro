---
import Layout from "$layouts/base.astro";
import { socials } from "$data/socials";
import AboutMe from "$components/about.md";
import ImageGrid from "$components/image-grid.astro";
import PageIntro from "$components/page-intro.svelte";
---

<Layout title="about me | dmitrykrasnov">
  <PageIntro heading="Whomst?" subheading="The one and only" />
  <div class="h-20"></div>
  <section
    class="grid min-h-content items-start gap-20 lg:grid-cols-[1fr,minmax(0,1fr)]"
  >
    <div class="order-1 mb-8 space-y-6 lg:-order-1 lg:space-y-10">
      <article><AboutMe /></article>
    </div>
    <div class="overflow-hidden">
      <ImageGrid />
      <ul role="list" class="flex w-full items-center justify-center py-1">
        {
          socials.map(([name, href]) => (
            <li>
              <a
                {href}
                target="_blank"
                class="rounded-md px-2.5 py-1.5 text-sm font-semibold text-neutral-500 transition hover:text-neutral-200 focus:outline-none focus:ring focus:ring-inset"
              >
                {name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Layout>
